<div class="form-group row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag('calculators/calculate', method: 'get', remote: true) do %>
        <%= text_field_tag(:q, '', class: 'form-control', id: 'expression_input', placeholder: 'Please Enter Your Math Expression') %>

        <div class="text-center calc_result" id="result_container">
          <span class="badge badge-success" id="result_data" style="background-color: limegreen"></span>
        </div>
        <br>

        <div class="text-center">
          <%= submit_tag('Calculate', class: 'btn btn-primary') %>
        </div>
    <% end %>
  </div>
</div>